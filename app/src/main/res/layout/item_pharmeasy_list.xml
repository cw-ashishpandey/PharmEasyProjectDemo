<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_list_person_img"
        android:layout_width="@dimen/view_width_default"
        android:layout_height="@dimen/view_height_default"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/tv_first_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/iv_list_person_img"
        android:textSize="@dimen/title_textSize" />

    <TextView
        android:id="@+id/tv_last_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_first_name"
        android:layout_below="@+id/tv_first_name"
        android:layout_marginTop="10dp"
        android:textSize="@dimen/title_textSize" />

</RelativeLayout>